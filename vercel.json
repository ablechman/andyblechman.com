{
  "version": 2,
  "rewrites": [
    {
      "source": "/blog",
      "destination": "https://andys-blog.ghost.io/"
    },
    {
      "source": "/blog/:path*",
      "destination": "https://andys-blog.ghost.io/:path*"
    }
  ],
  "headers": [
    {
      "source": "/blog",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://www.andyblechman.com"
        }
      ]
    }
  ]
}